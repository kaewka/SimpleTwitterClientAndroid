<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/compose_tweet"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:minHeight="30dp"
        android:minWidth="30dp"
        android:textSize="15dp"
        android:text="Cancel" />

    <Button
        android:id="@+id/btnTweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:minHeight="30dp"
        android:minWidth="30dp"
        android:textSize="15dp"
        android:text="Tweet" />

    <TextView
        android:id="@+id/tvUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnCancel"
        android:layout_toRightOf="@+id/ivUserImage"
        android:paddingLeft="6dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/border_ui"
        android:text="UserInfo" />

    <TextView
        android:id="@+id/tvNoofChars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btnTweet"
        android:layout_alignBottom="@+id/btnTweet"
        android:layout_marginRight="6dp"
        android:textSize="18sp"
        android:text="140" />

    <EditText
        android:id="@+id/etTweetData"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvUserInfo"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/ivUserImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnCancel"
        android:layout_marginLeft="4dp"
        android:src="@drawable/ic_launcher" />
    
</RelativeLayout>
